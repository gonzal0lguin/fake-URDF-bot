<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
    
    <xacro:include filename="inertial_macros.xacro"/>

    <!--COLORS -->
    <material name="blue">
        <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
    </material>

    <material name="red">
        <color rgba="1 0.0 0.0 1.0"/>
    </material>

    <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
    </material>

    <!-- BASE LINK -->
    <link name="base_link"/>  
    
    <!-- CHASSIS -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="-0.05 0.0 0.0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0.1 0.0 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.2 0.2 0.1"/>
            </geometry>
            <material name="blue" />
        </visual>
        <collision>
            <origin xyz="0.1 0.0 0.05" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="0.2 0.2 0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.2" y="0.2" z="0.1">
            <origin xyz="0.1 0.0 0.05" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/Blue</material>
    </gazebo>

    <!-- WHEELS -->

    <!-- LEFT WHEEL -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.115 0.0" rpy="-1.57079633 0.0 0.0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.03" radius="0.025">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Red</material>
        <mu1 value="1"/>
        <mu2 value="1"/>
    </gazebo>


    <!-- RIGHT WHEEL -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.115 0.0" rpy="1.57079633 0.0 0.0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.025" length="0.03"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.2" length="0.03" radius="0.025">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Red</material>
        <mu1 value="1"/>
        <mu2 value="1"/>
    </gazebo>

    <!-- CASTER WHEEL -->
    <joint name="caster_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="caster_wheel"/>
        <origin xyz="0.15 0.0 0.0"/>            
    </joint>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
            <material name="red" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.025"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.2" radius="0.025">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>
    </link>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Red</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <!-- <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_contol.so" />
    </gazebo> -->
</robot>
